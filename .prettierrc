{
	"trailingComma": "all",
	"useTabs": true,
	"semi": false,
	"singleQuote": true,
	"printWidth": 120,
	"quoteProps": "consistent",
	"jsxSingleQuote": false,
	"bracketSpacing": true,
	"bracketSameLine": false,
	"arrowParens": "avoid",
	"overrides": [
		{
			"files": ["*.md", "*.yml", "*.yaml"],
			"options": {
				"useTabs": false,
				"tabWidth": 2
			}
		}
	]
}
